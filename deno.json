{
  "lock": false,
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@fartlabs/htx"
  },
  "imports": {
    "#/": "./",
    "@fartlabs/css": "jsr:@fartlabs/css@^0.0.9",
    "@fartlabs/htx": "jsr:@fartlabs/htx@^0.0.10",
    "@std/cli": "jsr:@std/cli@^1.0.23",
    "@std/front-matter": "jsr:@std/front-matter@^1.0.9",
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/http": "jsr:@std/http@^1.0.21",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@types/react": "npm:@types/react@^19.2.2",
    "feed": "npm:feed@^5.1.0",
    "highlight.js": "npm:highlight.js@^11.11.1",
    "markdown-it": "npm:markdown-it@^14.1.0",
    "markdown-it-anchor": "npm:markdown-it-anchor@^9.2.0",
    "markdown-it-toc-done-right": "npm:markdown-it-toc-done-right@^4.2.0",
    "react": "npm:react@^19.2.0",
    "og_edge": "https://deno.land/x/og_edge@0.0.6/mod.ts"
  },
  "tasks": {
    "generate": "deno run -A codegen/codegen.ts",
    "start": {
      "description": "Start the server",
      "command": "deno serve --allow-net --allow-read --allow-ffi --allow-env --unstable-kv --env main.ts generated",
      "dependencies": ["generate"]
    },
    "outdated": "deno outdated --update --latest",
    "seed": {
      "description": "Seed the database",
      "command": "deno run --env --allow-read --allow-env --unstable-kv --allow-net database/cli.ts"
    },
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check",
    "precommit": {
      "description": "Run lint, fmt, and check before committing",
      "dependencies": ["check", "lint", "fmt", "generate"]
    }
  },
  "fmt": {
    "exclude": ["generated"]
  },
  "lint": {
    "exclude": ["generated"],
    "rules": {
      "exclude": ["jsx-key"]
    }
  }
}
